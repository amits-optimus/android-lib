<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.optimus.mobile.android"
    android:versionCode="1"
    android:versionName="1.0" >

    <uses-sdk
        android:minSdkVersion="8"
        android:targetSdkVersion="15" />

    <application
        android:icon="@drawable/ic_launcher"
        android:label="@string/app_name"
        android:theme="@style/AppTheme" >
        <activity
            android:name=".ChartDemo"
            android:label="@string/title_activity_chart_demo" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name="org.achartengine.GraphicalActivity" />
        <activity
            android:name=".ShowChart"
            android:label="@string/title_activity_bar_chart" >
            <intent-filter>
                <action android:name="com.optimus.mobile.android.ShowChart" />

                <category android:name="android.intent.category.DEFAULT" />
            </intent-filter>
        </activity>
    </application>

</manifest>